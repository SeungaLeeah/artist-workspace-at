{
  "compilerOptions": {
    "target": "es5",                         // 컴파일된 자바스크립트 버전 (예: ES5)
    "lib": ["dom", "dom.iterable", "esnext"], // 사용할 라이브러리 (DOM, ESNext 기능 사용)
    "allowJs": true,                         // JavaScript 파일도 허용
    "skipLibCheck": true,                    // 라이브러리 검사 건너뛰기
    "esModuleInterop": true,                 // ES 모듈 호환
    "allowSyntheticDefaultImports": true,    // 기본값을 모듈에 대해 허용
    "strict": true,                          // 엄격한 타입 검사 활성화
    "forceConsistentCasingInFileNames": true,// 파일명 대소문자 일관성 검사
    "module": "esnext",                      // ES 모듈 사용
    "moduleResolution": "node",              // 노드 방식의 모듈 해석 사용
    "resolveJsonModule": true,               // JSON 파일을 모듈처럼 사용 가능
    "jsx": "react-jsx",                    // JSX 문법을 React 17 이상에서 사용할 수 있도록 설정
    "paths": {
      "@svgs/*": ["public/icons/*"],
      "@image/*": ["public/image/*"],
      "@components/*": ["src/components/*"],
      "@remote/*": ["src/remote/*"],
      "@store/*": ["src/store/*"],
      "@styles/*": ["public/assets/styles/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "src/**/*"  // src 폴더 내 모든 TypeScript 파일 포함
  ]
}
